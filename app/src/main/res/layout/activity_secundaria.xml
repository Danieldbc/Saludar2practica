<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.eseiaat.upc.pma.borreguero.daniel.saludar2practica.SecundariaActivity">

    <EditText
        android:id="@+id/etSecundario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/escribirNombre"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSecundario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:onClick="Secundario"
        android:text="@string/aceptar" />
</RelativeLayout>
