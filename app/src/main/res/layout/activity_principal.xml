<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.eseiaat.upc.pma.borreguero.daniel.saludar2practica.PrincipalActivity">

    <TextView
        android:id="@+id/etHolaMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HolaMon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etHolaMon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:onClick="Principal"
        android:text="@string/Personalizar" />

</RelativeLayout>
